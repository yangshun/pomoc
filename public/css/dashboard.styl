@import variables
@import chat

body, html
  height: 100%
  width: 100%

.dashboard
  min-width: 1024px
  .page-container
    height: 100%
    padding-right: 15px
    width: 100%
    .row
      height: 100%
    .main-col
      display: inline-block
      float: left
      height: 100%
      padding: 0

    .menu-col
      background-color: $darkestGray
      width: 8%
      .menu-item
        cursor: pointer
        height: 80px
        margin: 10px 0
        padding-left: 10px
        text-align: center
        &.menu-thumbnail
          margin: 30px auto
          text-align: center
          img
            border: 2px solid $pomocBlue
            border-radius: 100px
            display: inline-block
            width: 60%
          h2
            font-weight: 500
        .fa
          color: $lightGray
          font-size: 2.5em
          &:hover
            color: $pomocBlue 
        h2, h3
          color: $gray
          font-size: 12px
          font-weight: 300
          margin-top: 5px

    .chats-col
      border-right: 1px solid $gray
      width: 40%
      .existing-chats
        border-bottom: 1px solid $gray

    .chat-messages-col
      position: relative
      width: 52%

