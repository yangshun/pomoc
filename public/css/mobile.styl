@import variables
@import chat

body, html
  height: 100%
  width: 100%

.mobile
  height: 100%
  position: relative
  width: 100%
  .modal
    .modal-body
      padding: 10px 15px
      h5 
        text-align: center
      .form-group
        margin-bottom: 0
    .modal-footer
      margin-top: 0
      padding: 10px 15px 20px
      text-align: center
    &.in .modal-dialog
      -webkit-transform: translate(0, 120px)
      transform: translate(0, 120px)
    .modal-label
      color: $gray
      font-weight: 300